                  <input type="number" autocomplete="off" name="margin_between" value="{{ margin_between }}" placeholder="0" id="input_margin_between" class="form-control" />
                </div>
              </div>

              <div class="form-group" id="div_width">
                <label class="col-sm-2 control-label" for="input_width">Width</label>
                <div class="col-sm-2">
                  <input type="number" autocomplete="off" name="width" value="{{ width }}" placeholder="0" id="input_width" class="form-control" />
                </div>
              </div>

              <div class="form-group" id="div_margin_top">
