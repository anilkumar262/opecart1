                <div class="col-sm-2">
                  <select name="header_align" id="input-header_align" class="form-control">

                   <option value="none" {% if header_align == 'none' %} selected="selected" {% endif %}>

                                                          None
                   </option>

                   <option value="top_left" {% if header_align == 'top_left' %} selected="selected" {% endif %}>

                                                          Top Left
                   </option>

                   <option value="top_center"{% if header_align == 'top_center' %} selected="selected" {% endif %}>

                                                          Top Center
                   </option>

                   <option value="top_right" {% if header_align == 'top_right' %} selected="selected" {% endif %}>

                                                          Top Right
                   </option>

                   <option value="left_floating"{% if header_align == 'left_floating' %} selected="selected" {% endif %}>

                                                          Left Floating
                   </option>

                </select>
                </div>
              </div>

              <div class="form-group" id="div_text_color">
                <label class="col-sm-2 control-label" for="input-text-color">Text Color</label>
                <div class="col-sm-2">
                  <input type="color" name="text_color" value="{{ text_color }}" placeholder="2" id="input-text-color" class="form-control" />
                </div>
              </div>

              <div class="form-group" id="div_background_color">
                <label class="col-sm-2 control-label" for="input-background-color">Background Color</label>
                <div class="col-sm-2">
                  <input type="color" name="bg_color" value="{{ bg_color }}" placeholder="2" id="input-background-color" class="form-control" />
                </div>
              </div>
              
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

