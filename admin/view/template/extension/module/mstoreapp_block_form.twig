<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-category" data-toggle="tooltip" title="{{ button_save }}" id="save" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
  <div class="alert alert-danger alert-dismissible" style="display: none;" id="alert"><i class="fa fa-exclamation-circle"></i> &nbsp;{{ alert }}
      <!--button type="button" class="close" data-dismiss="alert">&times;</button-->
    </div>
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-category" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-data" data-toggle="tab">{{ tab_data }}</a></li>
            <li><a href="#tab-design" data-toggle="tab">{{ tab_design }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-name">Name</label>
                <div class="col-sm-10">
                  <input type="text" autocomplete="off" name="name" value="{{ name }}" placeholder="Name" id="input-name" class="form-control" />
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-description">{{ entry_description }}</label>
                <div class="col-sm-10">
                  <textarea autocomplete="off" name="description" placeholder="{{ entry_description }}" id="input-description" class="form-control">{{ description }}</textarea>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="status" id="input-status" class="form-control">
                    {% if status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
            </div>

            <div class="tab-pane" id="tab-data">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input_parent_block">Parent Block</label>
                <div class="col-sm-10">
                   <select name="parent_id" id="input_parent_block" class="form-control">
                     <option value="0">Root</option>
                     {% for block in parent_blocks %}
                    <option value="{{ block.id }}" {% if parent_id == block.id %} selected="selected" {% endif %}>{{ block.name }}</option>
                     {% endfor %}
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-block-type">Block type</label>
                <div class="col-sm-10">
                  <select name="block_type"  id="input-block_type" class="form-control">
                        <option value="home" 
                          {% if block_type == 'home' %} selected="selected" {% endif %}>Home
                        </option>
                        <option value="menu"
                          {% if block_type == 'menu' %} selected="selected" {% endif %}>Menu
                        </option>
                        <option value="banner_block" 
                          {% if block_type == 'banner_block' %} selected="selected" {% endif %}>Banner Block
                        </option>
                        <option value="category_block"
                          {% if block_type == 'category_block' %} selected="selected" {% endif %}>Category Block
                        </option>
                        <option value="product_block" 
                          {% if block_type == 'product_block' %} selected="selected" {% endif %}>Product Block
                        </option>
                        <option value="banner" 
                          {% if block_type == 'banner' %} selected="selected" {% endif %}>Banner
                        </option>
                        <option value="flash_sale" 
                          {% if block_type == 'flash_sale' %} selected="selected" {% endif %}>Flash Sale
                        </option>
                        <option value="" 
                           {% if block_type == '' %} selected="selected" {% endif %} hidden="true">Select
                        </option>
                  </select>
                </div>
              </div>

              <div class="form-group" id="div_link_type">
                <label class="col-sm-2 control-label" for="input-link-type">Link type</label>
                <div class="col-sm-10">
                  <select name="link_type" id="input-link_type" class="form-control">
                    <option value="product" {% if link_type == 'product' %} selected="selected" {% endif %}>Product</option>
                    <option value="category" {% if link_type == 'category' %} selected="selected" {% endif %}>Category</option>
                    <option value="block" {% if link_type == 'block' %} selected="selected" {% endif %}>Block</option>
                    <option value=""  {% if link_type == '' %} selected="selected" {% endif %} hidden>Select</option>
                  </select>
                </div>
              </div>

              <div class="form-group" id="div_link_id">
                <label class="col-sm-2 control-label" for="input-link-id">ID</label>
                <div class="col-sm-10">
                  <input type="text" autocomplete="off" name="link_id" value="{{ link_id }}" placeholder="eg:product/category&path=25_29" id="input-link-id" class="form-control" />
                </div>
              </div>

              <div class="form-group" id="div_image">
                <label class="col-sm-2 control-label">{{ entry_image }}</label>
                <div class="col-sm-10">
                    <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail">
                    <img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" class="attachment_preview" id="attachment_preview" /></a>
                    <input type="hidden" name="image_url" value="{{ image_url }}" id="input-image" />
                </div>
              </div>

               <div class="form-group" id="div_image_width">
                <label class="col-sm-2 control-label" for="input-image-width">Image Width</label>
                <div class="col-sm-10">
                  <input type="number" autocomplete="off" name="image_width" value="{{ image_width }}" placeholder="0" id="input-image-width" class="form-control" />
                </div>
              </div>

               <div class="form-group" id="div_image_height">
                <label class="col-sm-2 control-label" for="input-image-height">Image Height</label>
                <div class="col-sm-10">
                  <input type="number" autocomplete="off" name="image_height" value="{{ image_height }}" placeholder="0" id="input-image-height" class="form-control" />
                </div>
              </div>

              <div class="form-group" id="div_sort_order">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="number" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
              </div>

              <div class="form-group" id="div_end_time">
                <label class="col-sm-2 control-label" for="input-end-time">End Time</label>
                <div class="col-sm-3">
                  <div class="input-group date">
                    <input type="text" autocomplete="off" readonly name="end_time" value="{{ end_time }}" placeholder="Jun 30,2018 15:37:00" data-date-format="MMMM DD,YYYY   hh:mm:ss" id="input-end-time" class="form-control" />
                    <span class="input-group-btn">
                    <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="tab-pane" id="tab-design">

              <div class="form-group" id="div_border_radius">
