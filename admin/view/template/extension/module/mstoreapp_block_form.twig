                   <option value="circular"{% if shape == 'circular' %} selected="selected" {% endif %}>Circular</option>

                  </select>
                </div>
              </div>

              <div class="form-group" id="div_card_style">
                <label class="col-sm-2 control-label" for="input-card-style">Card Style</label>
                <div class="col-sm-2">
